!-------------------------------------------------------------------------------
! MACHINE
!-------------------------------------------------------------------------------

! Available machines
Sinter_monoforce  = 1 ! Dr. Sinter 2080
Fritsch_monoforce = 2 ! Dr. Fritsch LSP 100 Basic
Fritsch_triforce  = 3 ! Dr. Fritsch LSP 100 Friforce

! Chosen option
machine_variant = Fritsch_triforce

!-------------------------------------------------------------------------------
! ANALYSIS TYPE
!-------------------------------------------------------------------------------

! Available analyses
steady_state = 1
transient    = 2

! Chosen option
analysis_type = transient

*IF,analysis_type,EQ,transient,THEN
	! Optional cooling
	simulate_cooling = false
*ENDIF

!-------------------------------------------------------------------------------
! LOAD CHANGE
!-------------------------------------------------------------------------------

! Available loadings
constant_voltage = 1
constant_current = 2
variable_voltage = 3
variable_current = 4
temperature_controll = 5

! Chosen option
load_type = temperature_controll

*IF,load_type,EQ,constant_voltage,THEN
	! Load magnitude and duration
	load_magnitude = 3.7*volt
	heating_time = 30*minute
*ELSEIF,load_type,EQ,constant_current,THEN
	! Load magnitude and duration
	load_magnitude = 5000*ampere
	heating_time = 30*minute
*ELSEIF,load_type,EQ,temperature_controll,THEN
	! Requested dwell temperature, time and heating rate
	dwell_temperature = 1800*kelvin
	dwell_time = 15*minute
	heating_rate = 100*kelvin/minute
*ENDIF

