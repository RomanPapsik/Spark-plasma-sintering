/COM,===========================================================================
/COM,SETUP
/COM,===========================================================================

FINISH
! Get information about batch/interactive mode
*GET,is_interactive,ACTIVE,0,INT
! Do only in interactive mode to prevent deleting command line arguments
*IF,is_interactive,NE,0,THEN
	! Clear everything
	/CLEAR,NOSTART
*ENDIF

/COM,---------------------------------------------------------------------------
/COM,CONSTANTS
/COM,---------------------------------------------------------------------------

! Boolean data types
false = 0
true = 1

! Define the number pi
PI = 3.141592653589793

! Meshing methods
free_mesh = 0
mapped_mesh = 1

! Element shape
tetrahedral_mesh = 1
hexahedral_mesh = 0

!-------------------------------------------------------------------------------
! VISUALISATION
!-------------------------------------------------------------------------------

! Coordinate system triad
/TRIAD,OFF
! Minimum and maximum
/PLOPTS,MINM,OFF
! Date and time
/PLOPTS,DATE,OFF

!-------------------------------------------------------------------------------
! UNITS
!-------------------------------------------------------------------------------

second = 1
meter = 1
kilogram = 1
ampere = 1
kelvin = 1

millisecond = second/1000
minute = second*60
millimeter = meter/1000
joule = (kilogram*(meter**2))/(second**2)
watt = joule/second
volt = watt/ampere
ohm = volt/ampere

/COM,---------------------------------------------------------------------------
/COM,COMMAND LINE VARIABLES
/COM,---------------------------------------------------------------------------

! Possible status of a variable
*SET,defined,0
*SET,undefined,-1

! Check command line
*GET,status_material_specimen,PARM,material_specimen,TYPE
*GET,status_heating_rate,PARM,heating_rate,TYPE

!-------------------------------------------------------------------------------
! SHORTCUTS
!-------------------------------------------------------------------------------

*ABBR,POWRGRPH

*ABBR,RESTART,/INPUT,SPS-0,inp
*ABBR,PNG,/INPUT,SPS-9-Export-images,inp
*ABBR,XML,/INPUT,SPS-9-Export-data,inp
